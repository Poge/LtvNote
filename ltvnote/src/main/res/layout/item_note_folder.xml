<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_height" >


    <LinearLayout
        android:id="@+id/notes_item_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/notes_item_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="7dp"
            android:src="@drawable/selector_list_item"
            android:visibility="gone" />

        <TextView
            android:id="@+id/notes_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/home_folder"
            android:gravity="center"
            android:text="17:48"
            android:textColor="@color/text_color_black"
            android:textSize="@dimen/text_size_big" />
    </LinearLayout>

    <TextView
        android:id="@+id/notes_item_week"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="18dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="星期二"
        android:textColor="@color/text_color_black"
        android:textSize="@dimen/text_size_smallest" />


    <ImageView
        android:id="@+id/notes_item_go"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="18dp"
        android:src="@drawable/home_go" />

    <LinearLayout
        android:id="@+id/notes_folder_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/notes_item_1"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/notes_folder_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/text_color_black"
            android:textSize="15sp"
            android:textStyle="normal" />

        <View
            android:layout_width="2px"
            android:layout_height="13dp"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:background="@color/text_color_black" />

        <TextView
            android:id="@+id/folder_notes_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/text_color_black"
            android:textSize="13sp" />
    </LinearLayout>

</RelativeLayout>
