<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_height" >


    <LinearLayout
        android:id="@+id/notes_item_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/notes_item_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="7dp"
            android:src="@drawable/selector_list_item"
            android:visibility="gone" />

        <TextView
            android:id="@+id/notes_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/home_green"
            android:gravity="center"
            android:text="17:48"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_big" />

        <ImageView
            android:id="@+id/notes_item_alarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:src="@drawable/alarm_list"
            android:visibility="gone" />
    </LinearLayout>

    <TextView
        android:id="@+id/notes_item_week"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="18dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="星期二"
        android:textColor="@color/text_color_black"
        android:textSize="@dimen/text_size_smallest" />

    <TextView
        android:id="@+id/notes_item_content"
        android:layout_width="254dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/notes_item_1"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:singleLine="false"
        android:lineSpacingExtra="10sp"
        android:letterSpacing="0.03"
        android:textColor="@color/text_color_black"
        android:textSize="13sp"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/notes_item_media"
        android:layout_width="@dimen/list_image_dimen"
        android:layout_height="@dimen/list_image_dimen"
        android:layout_alignParentRight="true"
        android:layout_marginRight="18dp"
        android:layout_marginTop="27dp"
        android:scaleType="centerCrop" />


</RelativeLayout>
